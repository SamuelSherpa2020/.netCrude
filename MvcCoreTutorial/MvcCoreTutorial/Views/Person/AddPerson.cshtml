@*@model MvcCoreTutorial.Models.Domain.Person;*@
@model MvcCoreTutorial.ViewModels.PersonViewModel;


<div  style="width:50%; margin-top:10px">
<form asp-action="AddPerson" method="Post">
    <h2>Add Person</h2>
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Name</label>
    <input asp-for="Name" type="text" class="form-control">
    <span class="text-danger" asp-validation-for="Name"></span>
  </div>

  <div class="mb-3">
    <label  asp-for="Age" class="form-label">Age</label>
    <input asp-for="Age" type="text" class="form-control">
    <span class="text-danger" asp-validation-for="Age"></span>

  </div>

  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" type="text" class="form-control"> 
    <span class="text-danger" asp-validation-for="Email"></span>
  </div>
  
  @if(TempData["msg"] !=null)
        {
            <div class="mb-3">
                @TempData["msg"]
            </div>
        }

  <button type="submit" class="btn btn-primary">Submit</button>
  <a href="/Person/DisplayPersons" class="btn btn-primary">All Persons</a>
</form>
</div>
